{
  "name": "dioxideai",
  "version": "2.0.0",
  "description": "Desktop GUI for Ollama-powered chat",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder --mac dmg"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/ianrelecker/dioxideai.git"
  },
  "devDependencies": {
    "electron": "^38.5.0",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.30.0",
    "@amplitude/analytics-node": "^1.5.21",
    "cheerio": "^1.1.2",
    "electron-updater": "^6.1.8",
    "marked": "^16.4.1",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.livellm.dioxideai",
    "productName": "DioxideAi",
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "renderer.js",
      "styles.css",
      "config/analytics-key.json",
      "config/analytics-key.sample.json",
      "assets/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ianrelecker",
        "repo": "dioxideai"
      }
    ]
  }
}
